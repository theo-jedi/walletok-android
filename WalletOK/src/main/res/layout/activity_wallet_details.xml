<!--        android:text="@string/no_entries_text_view"-->
<!--        app:layout_constraintBottom_toTopOf="@id/addOperationBtn"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/cardIncome" />-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addOperationBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:text="@string/add_operation"
        style="@style/BlackButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>