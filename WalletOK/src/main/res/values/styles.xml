<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashScreenTheme" parent="Theme.Walletokandroid">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>
    
    <style name="BlackButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/dark_gray</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BlackButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@android:color/darker_gray</item>
        <item name="backgroundTint">@drawable/selector_black_button_background</item>
        <item name="android:textColor">@drawable/selector_black_button_text</item>
        <item name="strokeColor">@color/dark_gray</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>