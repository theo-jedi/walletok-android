<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Walletokandroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/mainBackgroundColor</item>
        <item name="android:navigationBarColor">?attr/mainBackgroundColor</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

        <item name="mainBackgroundColor">@color/white</item>
        <item name="secondBackgroundColor">@color/light_gray</item>
        <item name="mainTextColor">@color/black</item>
        <item name="secondTextColor">@color/dark_gray_opacity_60</item>
    </style>

    <style name="Theme.Walletokandroid.Blue" parent="Theme.Walletokandroid">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>
</resources>